<% content_for :page_title do %>
  <%= Spree.t(:editing_dish_type) %> &ldquo;<%= @dish_type.name %>&rdquo;
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_dish_types_list), admin_dish_types_url, :icon => 'arrow-left' %></li>
  <% if can?(:create, Dish::DishType) %>
    <li id="new_dish_type_link">
      <%= button_link_to Spree.t(:new_dish_type), new_admin_dish_type_url, {:icon => 'plus', :id => 'admin_new_dish_type' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu'%>

<%= form_for @dish_type, method: :put, :url => admin_dish_type_url(@dish_type), :html => {:id => "edit_dish_type", :multipart => true} do |f| %>
  <fieldset data-hook="edit-dish_type">
    <%= render :partial => "form", :locals => {:f => f} %>

    <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'ok' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), admin_dish_type_url, :class => 'button' %>
    </div>
  </fieldset>
<% end %>