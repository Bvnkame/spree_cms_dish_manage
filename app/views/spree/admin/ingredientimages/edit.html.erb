<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/ingredient_tabs', :locals => {:current => 'Images'}%>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_images_list), admin_ingredient_ingredientimages_url(@ingredient), :icon => 'arrow-left' %></li>
<% end %>

<%= form_for [@ingredient, @ingredientimage], url: admin_ingredient_ingredientimage_url, :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_image">
    <legend align="center"><%= @ingredientimage.attachment_file_name%></legend>
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label Spree.t(:thumbnail) %><br>
      <%= link_to image_tag(@ingredientimage.attachment.url(:mini)), @ingredientimage.attachment.url(:ingredient) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Spree.t('actions.update'), 'refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= link_to Spree.t('actions.cancel'), admin_ingredient_ingredientimages_url(@ingredient), :id => 'cancel_link', :class => 'button remove' %>
    </div>
  </fieldset>
<% end %>
